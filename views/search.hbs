<div class="cover-container content-wrapper d-flex w-100 h-100 p-3 mx-auto flex-column">
  {{> navBar}}

  <form id="searchForm" action="">
    <div class="row mb-4">
      <div class="form-group col-md-9">
        <input id="search-input" type="search" placeholder="What're you searching for?"
          class="form-control form-control-underlined">
      </div>
      <div class="form-group col-md-3">
        <button type="submit" id="searchButton"
          class="btn btn-primary rounded-pill btn-block shadow-sm float-right float-md-none">Search</button>
      </div>
    </div>
  </form>
  {{#if listExists}} 
  <ul class="list-unstyled ">
    {{#each schools}}
       <li> <a href="/schools/{{this.id}}">{{this.name}} - {{this.city}},{{this.state}}</a></li>
    {{/each}}
  </ul>
{{/if}}

  {{> footer}}
</div>

