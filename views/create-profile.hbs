<div class="cover-container content-wrapper d-flex w-100 h-100 p-3 mx-auto flex-column">
    {{> navbar user=user}}
   
    <div class="loginForm p-3 shadow-6">
        <form action="./create-profile/{{user.id}}" method="POST" class="form-createName">
            <h1 class="display-4 mb-3 lead">Thanks for Signing Up!</h1>
            <p>Just a few more things to complete your profile...</p>

            <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstName" class="sr-only">First Name</label>
                <input type="text" name="firstName" id="firstName" maxlength="60" class="form-control form-control-underlined mb-3"
                    placeholder="First Name" required autofocus>
            </div>
            <div class="form-group col-md-6">
                <label for="lastName" class="sr-only">First Name</label>
                <input type="text" name="lastName" id="lastName" maxlength="60" class="form-control form-control-underlined mb-3"
                    placeholder="Last Name" required>
            </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="school-dropdown "class="sr-only">Choose a school:</label>
                    <select id="school-dropdown" class="mt-2">
                        <option value="" selected disabled hidden>Choose Your School</option>
                        <option value="">Not Listed</option>
                        <option disabled>---------------</option>
                    </select>
                    <small id="schoolHelpBlock" class="form-text text-muted">
                        If your school isn't listed, don't worry! You can add it later.
                    </small>
                </div>

                <div class="form-group col-md-6">
                    <label for="year-dropdown" class="sr-only">Choose Your Graduation Year:</label>
                    <select id="year-dropdown" class="mt-2">
                         <option value="" selected disabled hidden>Graduation Year</option>

                    </select>
                </div>
            </div>
   
            <button class="btn btn-lg btn-primary rounded-pill shadow-sm float-right float-md-none mt-3"
                type="submit">Save</button>


        </form>
    </div>


    {{> footer}}
</div>
<script src="../complete-profile.js"></script>